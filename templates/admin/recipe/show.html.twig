{% extends 'admin/admin.html.twig' %}

{% block title "Recettes " ~ recipe.title %}

{% block body %}
    <h1>Recette de {{recipe.title}}</h1>
    {# <ul>
        <li>
            <a href="{{ url('recipe.show', {id, slug}) }}">{{slug | upper}}</a>
        </li>
    </ul> #}
    <h4>Dur√©e : {{recipe.duration}}mn</h4>
    {# <span>
        <img src="/images/recipes/{{recipe.thumbnail}}" class="rounded img-thumbnail" alt="">
    </span> #}
    <img src="{{ vich_uploader_asset(recipe, 'thumbnailFile')}}" class="rounded img-thumbnail" alt="">
    <p>{{recipe.content | nl2br}}</p>
    <div class="d-flex gap-1">
        <a href="{{ url('admin.recipe.edit', {id: recipe.id})}}" class="btn btn-warning">Modifier</a>
        <form action="{{ path('admin.recipe.delete', {id: recipe.id}) }}" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
    </div>
{% endblock %}
